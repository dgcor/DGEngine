root = true

[{.github/**.yml,*.md,docs/**.md,test/*.md}]
charset                  = utf-8
end_of_line              = lf
insert_final_newline     = true

[{CMakeLists.txt,test/CMakeLists.txt}]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = space
insert_final_newline     = true

[{*,.vscode/**,test/data/**}.json]
charset                  = utf-8
end_of_line              = lf
indent_size              = 2
indent_style             = space
insert_final_newline     = false

[{src/**,test/src/**}]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = tab
insert_final_newline     = true
trim_trailing_whitespace = true

[src/{rapidjson,Utils/endian}/**]
indent_size              = unset
indent_style             = unset
insert_final_newline     = unset
trim_trailing_whitespace = unset

[src/SFML/dr_wav.h]
indent_size              = unset
indent_style             = unset
insert_final_newline     = unset
trim_trailing_whitespace = unset

[src/Utils/re.*]
indent_size              = unset
indent_style             = unset
insert_final_newline     = unset
trim_trailing_whitespace = unset
