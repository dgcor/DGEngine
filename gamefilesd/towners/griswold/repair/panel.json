{
  "action": [
    { "name": "resource.add", "id": "userPanelRepair" },
    {
      "name": "action.set",
      "id": "mainMenu.moveScrollbar",
      "action": [
        {
          "name": "menu.moveScrollbar",
          "idMenu": "mainMenu",
          "idScrollbar": "sb_thumb",
          "idAnchorTo": "btnDrag",
          "range": 180
        },
        {
          "name": "menu.setIndex",
          "id": "menuPrices",
          "index": "|mainMenu|currentIdx|"
        }
      ]
    },
    {
      "name": "action.set",
      "id": "anchorLeftPentagram",
      "action": {
        "name": "drawable.verticalAnchorToFocused",
        "id": "pent1"
      }
    },
    {
      "name": "action.set",
      "id": "anchorRightPentagram",
      "action": {
        "name": "drawable.verticalAnchorToFocused",
        "id": "pent2"
      }
    }
  ],
  "animation": [
    {
      "texturePack": "pentspn2",
      "id": "pent1",
      "position": [32, 94],
      "anchor": "none",
      "refresh": 50
    },
    {
      "texturePack": "pentspn2",
      "id": "pent2",
      "position": [575, 94],
      "anchor": "none",
      "refresh": 50
    }
  ],
  "menu": {
    "id": "mainMenu",
    "replaceVars": true,
    "bitmapFont": "smaltext",
    "sound": "titlslct",
    "position": [52, 94],
    "horizontalSpaceOffset": 1,
    "verticalSpaceOffset": 2,
    "anchor": "none",
    "focus": true,
    "focusOnClick": false,
    "focusSound": "titlemov",
    "visibleItems": 4,
    "size": [518, 186],
    "verticalPad": 26,
    "onScrollDown": "focus.moveDown",
    "onScrollUp": "focus.moveUp",
    "items": [
      {
        "load": "currentLevel|currentPlayer.inventory.body",
        "exclude": {
          "property": "needsRepair",
          "value": false
        },
        "text": "%name%\n  %d.0%,  %d.3%",
        "onClick": {
          "name": "load",
          "file": [
            "towners/griswold/repair/confirm.json",
            "body",
            "%idx%"
          ]
        },
        "onFocus": [
          "anchorLeftPentagram",
          "anchorRightPentagram",
          "mainMenu.moveScrollbar"
        ],
        "executeAction": {
          "name": "if.equal",
          "param1": "|currentLevel|currentPlayer.canUseItem.body.%idx%|",
          "param2": false,
          "then": {
            "name": "menu.setColor",
            "id": "mainMenu",
            "index": "%menuIdx%",
            "color": "%textRed%"
          },
          "else": {
            "name": "if.equal",
            "param1": "|currentLevel|currentPlayer.item.body.%idx%.unique|",
            "param2": 1,
            "then": {
              "name": "menu.setColor",
              "id": "mainMenu",
              "index": "%menuIdx%",
              "color": "%textGold%"
            },
            "else": {
              "name": "if.equal",
              "param1": "|currentLevel|currentPlayer.item.body.%idx%.magical|",
              "param2": 1,
              "then": {
                "name": "menu.setColor",
                "id": "mainMenu",
                "index": "%menuIdx%",
                "color": "%textBlue%"
              },
              "else": {
                "name": "menu.setColor",
                "id": "mainMenu",
                "index": "%menuIdx%"
              }
            }
          }
        }
      },
      {
        "load": "currentLevel|currentPlayer.inventory.belt",
        "exclude": {
          "property": "needsRepair",
          "value": false
        },
        "text": "%name%\n  %d.0%,  %d.3%",
        "onClick": {
          "name": "load",
          "file": [
            "towners/griswold/repair/confirm.json",
            "belt",
            "%idx%"
          ]
        },
        "onFocus": [
          "anchorLeftPentagram",
          "anchorRightPentagram",
          "mainMenu.moveScrollbar"
        ],
        "executeAction": {
          "name": "if.equal",
          "param1": "|currentLevel|currentPlayer.canUseItem.belt.%idx%|",
          "param2": false,
          "then": {
            "name": "menu.setColor",
            "id": "mainMenu",
            "index": "%menuIdx%",
            "color": "%textRed%"
          },
          "else": {
            "name": "if.equal",
            "param1": "|currentLevel|currentPlayer.item.belt.%idx%.unique|",
            "param2": 1,
            "then": {
              "name": "menu.setColor",
              "id": "mainMenu",
              "index": "%menuIdx%",
              "color": "%textGold%"
            },
            "else": {
              "name": "if.equal",
              "param1": "|currentLevel|currentPlayer.item.belt.%idx%.magical|",
              "param2": 1,
              "then": {
                "name": "menu.setColor",
                "id": "mainMenu",
                "index": "%menuIdx%",
                "color": "%textBlue%"
              },
              "else": {
                "name": "menu.setColor",
                "id": "mainMenu",
                "index": "%menuIdx%"
              }
            }
          }
        }
      },
      {
        "load": "currentLevel|currentPlayer.inventory.stash",
        "exclude": {
          "property": "needsRepair",
          "value": false
        },
        "text": "%name%\n  %d.0%,  %d.3%",
        "onClick": {
          "name": "load",
          "file": [
            "towners/griswold/repair/confirm.json",
            "stash",
            "%idx%"
          ]
        },
        "onFocus": [
          "anchorLeftPentagram",
          "anchorRightPentagram",
          "mainMenu.moveScrollbar"
        ],
        "executeAction": {
          "name": "if.equal",
          "param1": "|currentLevel|currentPlayer.canUseItem.stash.%idx%|",
          "param2": false,
          "then": {
            "name": "menu.setColor",
            "id": "mainMenu",
            "index": "%menuIdx%",
            "color": "%textRed%"
          },
          "else": {
            "name": "if.equal",
            "param1": "|currentLevel|currentPlayer.item.stash.%idx%.unique|",
            "param2": 1,
            "then": {
              "name": "menu.setColor",
              "id": "mainMenu",
              "index": "%menuIdx%",
              "color": "%textGold%"
            },
            "else": {
              "name": "if.equal",
              "param1": "|currentLevel|currentPlayer.item.stash.%idx%.magical|",
              "param2": 1,
              "then": {
                "name": "menu.setColor",
                "id": "mainMenu",
                "index": "%menuIdx%",
                "color": "%textBlue%"
              },
              "else": {
                "name": "menu.setColor",
                "id": "mainMenu",
                "index": "%menuIdx%"
              }
            }
          }
        }
      }
    ]
  },
  "button": {
    "id": "back",
    "bitmapFont": "smaltext",
    "sound": "titlslct",
    "position": [320, 304],
    "anchor": "none",
    "horizontalAlign": "center",
    "horizontalSpaceOffset": 1,
    "text": "Back",
    "onClick": [
      { "name": "resource.popAll", "id": "userPanelBigFrame" },
      { "name": "resource.ignore", "id": "userPanel", "ignore": false }
    ],
    "onFocus": [
      "anchorLeftPentagram",
      "anchorRightPentagram"
    ]
  },
  "action": {
    "name": "if.notEqual",
    "param1": "|mainMenu|itemCount|",
    "param2": 0,
    "then": [
      {
        "name": "text.setText",
        "id": "panelTitle",
        "binding": "|currentLevel|currentPlayer.gold|",
        "format": "Repair which item?            Your gold : [1]"
      },
      { "name": "load", "file": "towners/griswold/repair/listItems.json" }
    ],
    "else": [
      {
        "name": "text.setText",
        "id": "panelTitle",
        "binding": "|currentLevel|currentPlayer.gold|",
        "format": "You have nothing to repair.            Your gold : [1]"
      },
      { "name": "load", "file": "towners/griswold/repair/noItems.json" }
    ]
  }
}