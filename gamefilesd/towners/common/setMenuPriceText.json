{
  "action": {
    "replaceVars": true,
    "name": "if.equal",
    "param1": {
      "name": "player.canUseItem",
      "item": { "player": "{1}", "inventory": {2}, "item": {3} }
    },
    "param2": false,
    "then": {
      "name": "menu.setColor",
      "id": "menuPrices",
      "index": {4},
      "color": "%textRed%"
    },
    "else": {
      "name": "if.equal",
      "param1": "|currentLevel|player.{1}.item.{2}.{3}.unique|",
      "param2": 1,
      "then": {
        "name": "menu.setColor",
        "id": "menuPrices",
        "index": {4},
        "color": "%textGold%"
      },
      "else": {
        "name": "if.equal",
        "param1": "|currentLevel|player.{1}.item.{2}.{3}.magical|",
        "param2": 1,
        "then": {
          "name": "menu.setColor",
          "id": "menuPrices",
          "index": {4},
          "color": "%textBlue%"
        },
        "else": {
          "name": "menu.setColor",
          "id": "menuPrices",
          "index": {4}
        }
      }
    }
  }
}