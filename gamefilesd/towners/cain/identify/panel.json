{
  "action": [
    { "name": "resource.add", "id": "userPanelIdentify" },
    {
      "name": "action.set",
      "id": "mainMenu.moveScrollbar",
      "action": [
        {
          "name": "menu.moveScrollbar",
          "idMenu": "mainMenu",
          "idScrollbar": "sb_thumb",
          "idAnchorTo": "btnDrag",
          "range": 180
        },
        {
          "name": "menu.setIndex",
          "id": "menuPrices",
          "index": "|mainMenu|currentIdx|"
        }
      ]
    },
    {
      "name": "action.set",
      "id": "anchorLeftPentagram",
      "action": {
        "name": "drawable.verticalAnchorToFocused",
        "id": "pent1"
      }
    },
    {
      "name": "action.set",
      "id": "anchorRightPentagram",
      "action": {
        "name": "drawable.verticalAnchorToFocused",
        "id": "pent2"
      }
    }
  ],
  "animation": [
    {
      "texturePack": "pentspn2",
      "id": "pent1",
      "position": [32, 94],
      "anchor": "none",
      "refresh": 50
    },
    {
      "texturePack": "pentspn2",
      "id": "pent2",
      "position": [575, 94],
      "anchor": "none",
      "refresh": 50
    }
  ],
  "menu": {
    "id": "mainMenu",
    "bitmapFont": "smaltext",
    "sound": "titlslct",
    "position": [52, 94],
    "horizontalSpaceOffset": 1,
    "verticalSpaceOffset": 2,
    "anchor": "none",
    "focus": true,
    "focusOnClick": false,
    "focusSound": "titlemov",
    "visibleItems": 4,
    "size": [518, 186],
    "verticalPad": 14,
    "onScrollDown": "focus.moveDown",
    "onScrollUp": "focus.moveUp",
    "items": [
      {
        "load": "currentLevel|currentPlayer.inventory.body",
        "exclude": {
          "property": "identified",
          "value": true
        },
        "text": "%name%\n",
        "onClick": {
          "name": "load",
          "file": ["towners/cain/identify/confirm.json", 0, "%idx%"]
        },
        "onFocus": [
          "anchorLeftPentagram",
          "anchorRightPentagram",
          "mainMenu.moveScrollbar"
        ],
        "executeAction": {
          "name": "load",
          "file": ["towners/common/setMenuItemText.json", "hero", 0, "%idx%", "%menuIdx%"]
        }
      },
      {
        "load": "currentLevel|currentPlayer.inventory.belt",
        "exclude": {
          "property": "identified",
          "value": true
        },
        "text": "%name%\n",
        "onClick": {
          "name": "load",
          "file": ["towners/cain/identify/confirm.json", 1, "%idx%"]
        },
        "onFocus": [
          "anchorLeftPentagram",
          "anchorRightPentagram",
          "mainMenu.moveScrollbar"
        ],
        "executeAction": {
          "name": "load",
          "file": ["towners/common/setMenuItemText.json", "hero", 1, "%idx%", "%menuIdx%"]
        }
      },
      {
        "load": "currentLevel|currentPlayer.inventory.stash",
        "exclude": {
          "property": "identified",
          "value": true
        },
        "text": "%name%\n",
        "onClick": {
          "name": "load",
          "file": ["towners/cain/identify/confirm.json", 2, "%idx%"]
        },
        "onFocus": [
          "anchorLeftPentagram",
          "anchorRightPentagram",
          "mainMenu.moveScrollbar"
        ],
        "executeAction": {
          "name": "load",
          "file": ["towners/common/setMenuItemText.json", "hero", 2, "%idx%", "%menuIdx%"]
        }
      }
    ]
  },
  "button": {
    "id": "back",
    "bitmapFont": "smaltext",
    "sound": "titlslct",
    "position": [320, 304],
    "anchor": "none",
    "horizontalAlign": "center",
    "horizontalSpaceOffset": 1,
    "text": "Back",
    "onClick": [
      { "name": "resource.popAll", "id": "userPanelBigFrame" },
      { "name": "resource.ignore", "id": "userPanel", "ignore": false }
    ],
    "onFocus": [
      "anchorLeftPentagram",
      "anchorRightPentagram"
    ]
  },
  "action": {
    "name": "if.notEqual",
    "param1": "|mainMenu|itemCount|",
    "param2": 0,
    "then": [
      {
        "name": "text.setText",
        "id": "panelTitle",
        "binding": "|currentLevel|currentPlayer.gold|",
        "format": "Identify which item?            Your gold : [1]"
      },
      { "name": "load", "file": "towners/cain/identify/listItems.json" }
    ],
    "else": [
      {
        "name": "text.setText",
        "id": "panelTitle",
        "binding": "|currentLevel|currentPlayer.gold|",
        "format": "You have nothing to identify.            Your gold : [1]"
      },
      { "name": "load", "file": "towners/cain/identify/noItems.json" }
    ]
  }
}