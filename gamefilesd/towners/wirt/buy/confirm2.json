{
  "action": [
    { "name": "resource.add", "id": "userPanelConfirm", "ignorePrevious": true },
    { "name": "load", "file": "ui/level/panel/big/upperSeparator.json" }
  ],
  "animation": [
    {
      "texture": "pentspn2",
      "id": "pent1",
      "frames": 8,
      "position": [32, 94],
      "anchor": "none",
      "refresh": 50
    },
    {
      "texture": "pentspn2",
      "id": "pent2",
      "frames": 8,
      "position": [575, 94],
      "anchor": "none",
      "refresh": 50
    }
  ],
  "text": [
    {
      "id": "itemInfo",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [52, 130],
      "anchor": "none",
      "horizontalSpaceOffset": 1,
      "verticalSpaceOffset": 2
    },
    {
      "id": "itemPrice",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [571, 130],
      "anchor": "none",
      "horizontalAlign": "right",
      "horizontalSpaceOffset": 1
    },
    {
      "id": "confirm",
      "bitmapFont": "smaltext",
      "position": [320, 214],
      "anchor": "none",
      "horizontalAlign": "center",
      "horizontalSpaceOffset": 1,
      "text": "Do we have a deal?"
    }
  ],
  "button": [
    {
      "id": "yes",
      "bitmapFont": "smaltext",
      "sound": "titlslct",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 250],
      "anchor": "none",
      "horizontalAlign": "center",
      "horizontalSpaceOffset": 1,
      "text": "Yes",
      "onClick": [
        {
          "name": "player.removeGold",
          "gold": "|currentLevel|player.wirt.item.{1}.{2}.price|"
        },
        {
          "name": "item.trade",
          "item": { "player": "wirt", "inventory": {1}, "item": {2} },
          "position": "BottomLeft",
          "onInventoryFull": "inventoryFull"
        },
        { "name": "resource.popAll", "id": "userPanelMain" },
        { "name": "load", "file": "towners/wirt/panelMain.json" }
      ],
      "onFocus": [
        "anchorLeftPentagram",
        "anchorRightPentagram"
      ]
    },
    {
      "id": "back",
      "bitmapFont": "smaltext",
      "sound": "titlslct",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 274],
      "anchor": "none",
      "horizontalAlign": "center",
      "horizontalSpaceOffset": 1,
      "text": "No",
      "onClick": { "name": "resource.popAll", "id": "userPanelConfirm" },
      "onFocus": [
        "anchorLeftPentagram",
        "anchorRightPentagram"
      ]
    }
  ],
  "load": ["towners/common/setItemInfo.json", "wirt", "{1}", "{2}"],
  "load": ["towners/common/setPriceInfo.json", "wirt", "{1}", "{2}",
           "|currentLevel|player.wirt.item.{1}.{2}.price|"],
  "action": [
    "anchorLeftPentagram",
    "anchorRightPentagram"
  ]
}