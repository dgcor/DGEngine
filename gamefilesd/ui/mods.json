{
  "action": [
    { "name": "resource.add", "id": "mods", "ignorePrevious": true },
    { "name": "text.setFont", "id": "mods", "font": "font30s" },
    { "name": "game.fadeIn" }
  ],
  "keyboard": {
    "key": "esc",
    "action": { "name": "button.click", "id": "back" }
  },
  "image": {
    "id": "mainmenu",
    "texture": "mainmenu",
    "anchor": "none"
  },
  "animation": [
    {
      "id": "smlogo",
      "texturePack": "smlogo",
      "position": ["center", 0],
      "anchor": "none",
      "refresh": 50
    },
    {
      "id": "pent1",
      "texturePack": "focus42",
      "position": [67, 192],
      "anchor": "none",
      "refresh": 50
    },
    {
      "id": "pent2",
      "texturePack": "focus42",
      "position": [537, 192],
      "anchor": "none",
      "refresh": 50
    }
  ],
  "button": [
    {
      "id": "diablo",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [319, 192],
      "anchor": "none",
      "horizontalAlign": "center",
      "text": "Diablo",
      "onClick": { "name": "game.load", "file": "gamefilesd" },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "hellfire",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [319, 235],
      "anchor": "none",
      "horizontalAlign": "center",
      "text": "Hellfire",
      "onClick": { "name": "game.load", "file": "gamefileshf" },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "flare",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [319, 277],
      "anchor": "none",
      "horizontalAlign": "center",
      "text": "Diablo Flare",
      "onClick": { "name": "game.load", "file": "gamefilesflare" },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "back",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [319, 320],
      "anchor": "none",
      "horizontalAlign": "center",
      "text": "Back",
      "onClick": {
        "name": "game.fadeOut",
        "action": [
          { "name": "load", "file": "ui/saveSettings.json" },
          { "name": "resource.pop" },
          { "name": "game.fadeIn" }
        ]
      },
      "onFocus": "anchorPentagrams"
    }
  ],
  "action": [
    {
      "name": "if",
      "params": [
        "%game.title%", "==", "Diablo",
        "or",
        { "name": "gamefile.exists", "file": "gamefilesd" }, "==", false,
        "or",
        { "name": "gamefile.exists", "file": "DIABDAT.MPQ" }, "==", false
      ],
      "then": [
        { "name": "text.setFont", "id": "diablo", "font": "font42y" },
        { "name": "button.enable", "id": "diablo", "enable": false }
      ]
    },
    {
      "name": "if",
      "params": [
        "%game.title%", "==", "Hellfire",
        "or",
        { "name": "gamefile.exists", "file": "gamefilesd" }, "==", false,
        "or",
        { "name": "gamefile.exists", "file": "gamefileshf" }, "==", false,
        "or",
        { "name": "gamefile.exists", "file": "DIABDAT.MPQ" }, "==", false,
        "or",
        { "name": "gamefile.exists", "file": "hellfire.mpq" }, "==", false,
        "or",
        { "name": "gamefile.exists", "file": "hfmonk.mpq" }, "==", false
      ],
      "then": [
        { "name": "text.setFont", "id": "hellfire", "font": "font42y" },
        { "name": "button.enable", "id": "hellfire", "enable": false }
      ]
    },
    {
      "name": "if",
      "params": [
        "%game.title%", "==", "Diablo Flare",
        "or",
        { "name": "gamefile.exists", "file": "gamefilesd" }, "==", false,
        "or",
        { "name": "gamefile.exists", "file": "gamefilesflare" }, "==", false,
        "or",
        { "name": "gamefile.exists", "file": "fantasycore" }, "==", false
      ],
      "then": [
        { "name": "text.setFont", "id": "flare", "font": "font42y" },
        { "name": "button.enable", "id": "flare", "enable": false }
      ]
    },
    "focus.update",
    "anchorPentagrams"
  ]
}