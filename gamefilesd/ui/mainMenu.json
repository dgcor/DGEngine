{
  "action": [
    {
      "name": "resource.add",
      "id": "mainMenu"
    },
    {
      "name": "action.set",
      "id": "loadMainMenuImg",
      "action": {
        "name": "loadJson",
        "json": {
          "image": {
            "id": "mainmenu",
            "texture": "mainmenu",
            "anchor": "none"
          }
        }
      }
    },
    {
      "name": "action.set",
      "id": "loadLogoImg",
      "action": {
        "name": "loadJson",
        "json": {
          "animation": {
            "id": "smlogo",
            "texturePack": "smlogo",
            "position": [125, 0],
            "anchor": "none",
            "refresh": 50
          }
        }
      }
    }
  ],
  "audio": {
    "id": "main",
    "file": "music/dintro.wav",
    "volume": 50,
    "loop": true,
    "play": true
  },
  "inputEvent": [
    {
      "gameInputEvent": "enter",
      "action": "focus.click"
    },
    {
      "gameInputEvent": "up",
      "action": "focus.moveUp"
    },
    {
      "gameInputEvent": "tabUp",
      "action": "focus.moveUp"
    },
    {
      "gameInputEvent": "down",
      "action": "focus.moveDown"
    },
    {
      "gameInputEvent": "tabDown",
      "action": "focus.moveDown"
    },
    {
      "gameInputEvent": "esc",
      "action": { "name": "menu.click", "id": "menu", "index": 4 }
    },
    {
      "gameInputEvent": "info",
      "action": {
        "name": "game.fadeOut",
        "action": {
          "name": "load",
          "file": "ui/gameInfo.json"
        }
      }
    }
  ],
  "texture": [
    {
      "id": "mainmenu",
      "file": "ui_art/mainmenu.pcx"
    },
    {
      "id": "smlogo",
      "file": "ui_art/smlogo.pcx",
      "mask": "0x00FF00"
    },
    {
      "id": "focus42",
      "file": "ui_art/focus42.pcx",
      "mask": "0x00FF00"
    }
  ],
  "texturePack": [
    {
      "id": "smlogo",
      "texture": "smlogo",
      "frames": 15
    },
    {
      "id": "focus42",
      "texture": "focus42",
      "frames": 8
    }
  ],
  "cursor": {
    "texture": "cursor"
  },
  "action.loadImages": [
    "loadMainMenuImg",
    "loadLogoImg"
  ],
  "animation": [
    {
      "id": "pent1",
      "texturePack": "focus42",
      "position": [67, 192],
      "anchor": "none",
      "refresh": 50
    },
    {
      "id": "pent2",
      "texturePack": "focus42",
      "position": [537, 192],
      "anchor": "none",
      "refresh": 50
    }
  ],
  "menu": {
    "replaceVars": true,
    "id": "menu",
    "font": "font42g",
    "position": [319, 192],
    "sound": "titlslct",
    "focus": true,
    "focusSound": "titlemov",
    "anchor": "none",
    "items": [
      {
        "text": "|str_singlePlayer|",
        "position": [170, 192],
        "onClick": {
          "name": "load",
          "file": "ui/singlePlayer/main.json"
        },
        "onFocus": "anchorPentagrams"
      },
      {
        "text": "|str_multiPlayer|",
        "position": [172, 235],
        "enable": false,
        "onFocus": "anchorPentagrams"
      },
      {
        "text": "|str_replayIntro|",
        "position": [174, 277],
        "onClick": {
          "name": "load",
          "file": ["ui/playIntro.json", "ui/fadeIn.json"]
        },
        "onFocus": "anchorPentagrams"
      },
      {
        "text": "|str_showCredits|",
        "position": [173, 320],
        "onClick": {
          "name": "game.fadeOut",
          "action": {
            "name": "load",
            "file": "ui/credits.json"
          }
        },
        "onFocus": "anchorPentagrams"
      },
      {
        "text": "|str_exitGame|",
        "position": [192, 363],
        "onClick": {
          "name": "game.fadeOut",
          "action": "saveSettingsAndClose"
        },
        "onFocus": "anchorPentagrams"
      }
    ]
  },
  "button": {
    "replaceVars": true,
    "id": "versionInfo",
    "font": "font16s",
    "position": [17, 444],
    "sound": "titlslct",
    "anchor": "none",
    "onClick": {
      "name": "game.fadeOut",
      "action": {
        "name": "load",
        "file": "ui/settings.json"
      }
    },
    "onHoverEnter": { "name": "text.setText", "id": "versionInfo", "text": "|str_changeSettings|" },
    "onHoverLeave": {
      "name": "text.setText",
      "id": "versionInfo",
      "binding": ["%game.title%", "%game.version%"],
      "format": "[1] v[2]"
    }
  },
  "load": "ui/showMods.json",
  "action.update": [
    { "name": "menu.setFont", "id": "menu", "index": 1, "font": "font42y" },
    {
      "name": "text.setText",
      "id": "versionInfo",
      "binding": ["%game.title%", "%game.version%"],
      "format": "[1] v[2]"
    }
  ]
}