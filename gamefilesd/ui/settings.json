{
  "action": [
    { "name": "resource.add", "id": "settings", "ignorePrevious": true },
    { "name": "game.fadeIn" },
    "loadMainMenuImg",
    "loadLogoImg"
  ],
  "keyboard": [
    {
      "key": ["enter", " "],
      "action": "focus.click"
    },
    {
      "key": ["up", "w"],
      "action": "focus.moveUp"
    },
    {
      "key": "tab",
      "shift": true,
      "action": "focus.moveUp"
    },
    {
      "key": ["down", "s", "tab"],
      "action": "focus.moveDown"
    },
    {
      "key": "esc",
      "action": { "name": "button.click", "id": "back" }
    }
  ],
  "animation": [
    {
      "id": "pent1",
      "texturePack": "focus42",
      "position": [40, 192],
      "anchor": "none",
      "refresh": 50
    },
    {
      "id": "pent2",
      "texturePack": "focus42",
      "position": [564, 192],
      "anchor": "none",
      "refresh": 50
    }
  ],
  "button": [
    {
      "id": "windowSize",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "binding": ["%game.size.x%", "%game.size.y%"],
      "format": "[1]x[2]",
      "position": [320, 150],
      "anchor": "none",
      "horizontalAlign": "center",
      "onClick": {
        "name": "switch",
        "param": "%windowSize.text%",
        "case": [
          {
            "value": "640x480",
            "action": { "name": "loadJson", "json": { "windowSize": [800, 600] } }
          },
          {
            "value": "800x600",
            "action": { "name": "loadJson", "json": { "windowSize": [640, 480] } }
          }
        ],
        "default": { "name": "loadJson", "json": { "windowSize": [640, 480] } }
      },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "maxWindowHeight",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "binding": "%game.maxWindowHeight%",
      "format": "Max Height: [1]",
      "position": [320, 193],
      "anchor": "none",
      "horizontalAlign": "center",
      "onClick": {
        "name": "switch",
        "param": "%game.maxWindowHeight%",
        "case": [
          {
            "value": 0,
            "action": { "name": "loadJson", "json": { "maxWindowHeight": 480 } }
          },
          {
            "value": 480,
            "action": { "name": "loadJson", "json": { "maxWindowHeight": 600 } }
          }
        ],
        "default": { "name": "loadJson", "json": { "maxWindowHeight": 0 } }
      },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "stretchToFit",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 236],
      "anchor": "none",
      "horizontalAlign": "center",
      "onClick": {
        "name": "if.equal",
        "param1": "%game.stretchToFit%",
        "param2": false,
        "then": [
          { "name": "loadJson", "json": { "stretchToFit": true } },
          { "name": "text.setText", "id": "stretchToFit", "text": "Stretch to Fit: On" }
        ],
        "else": [
          { "name": "loadJson", "json": { "stretchToFit": false } },
          { "name": "text.setText", "id": "stretchToFit", "text": "Stretch to Fit: Off" }
        ]
      },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "keepAR",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 278],
      "anchor": "none",
      "horizontalAlign": "center",
      "onClick": {
        "name": "if.equal",
        "param1": "%game.keepAR%",
        "param2": false,
        "then": [
          { "name": "loadJson", "json": { "keepAR": true } },
          { "name": "text.setText", "id": "keepAR", "text": "Keep Ratio: On" }
        ],
        "else": [
          { "name": "loadJson", "json": { "keepAR": false } },
          { "name": "text.setText", "id": "keepAR", "text": "Keep Ratio: Off" }
        ]
      },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "smoothScreen",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 321],
      "anchor": "none",
      "horizontalAlign": "center",
      "onClick": {
        "name": "if.equal",
        "param1": "%game.smoothScreen%",
        "param2": false,
        "then": [
          { "name": "loadJson", "json": { "smoothScreen": true } },
          { "name": "text.setText", "id": "smoothScreen", "text": "Smooth Screen: On" }
        ],
        "else": [
          { "name": "loadJson", "json": { "smoothScreen": false } },
          { "name": "text.setText", "id": "smoothScreen", "text": "Smooth Screen: Off" }
        ]
      },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "framerate",
      "font": "font42g",
      "sound": "titlemov",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 364],
      "anchor": "none",
      "horizontalAlign": "center",
      "onClick": {
        "name": "switch",
        "param": "%game.framerate%",
        "case": [
          {
            "value": 0,
            "action": [
              { "name": "loadJson", "json": { "framerate": 30 } },
              {
                "name": "text.setText",
                "id": "framerate",
                "binding": "%game.framerate%",
                "format": "Framerate Limit: [1]"
              }
            ]
          },
          {
            "value": 30,
            "action": [
              { "name": "loadJson", "json": { "framerate": 60 } },
              {
                "name": "text.setText",
                "id": "framerate",
                "binding": "%game.framerate%",
                "format": "Framerate Limit: [1]"
              }
            ]
          },
          {
            "value": 60,
            "action": [
              { "name": "loadJson", "json": { "framerate": 0 } },
              {
                "name": "text.setText",
                "id": "framerate",
                "text": "Framerate Limit: Off"
              }
            ]
          }
        ],
        "default": { "name": "loadJson", "json": { "windowSize": [640, 480] } }
      },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "back",
      "font": "font42g",
      "sound": "titlslct",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 407],
      "anchor": "none",
      "horizontalAlign": "center",
      "text": "OK",
      "onClick": {
        "name": "game.fadeOut",
        "action": [
          { "name": "load", "file": "ui/saveSettings.json" },
          { "name": "resource.pop" },
          { "name": "game.fadeIn" }
        ]
      },
      "onFocus": "anchorPentagrams"
    },
    {
      "id": "shaders",
      "font": "font16s",
      "position": [17, 444],
      "sound": "titlslct",
      "anchor": "none",
      "text": "Shaders",
      "onClick": {
        "name": "game.fadeOut",
        "action": {
          "name": "load",
          "file": "ui/settingsShaders.json"
        }
      }
    }
  ],
  "action": [
    {
      "name": "if.equal",
      "param1": "%game.stretchToFit%",
      "param2": true,
      "then": { "name": "text.setText", "id": "stretchToFit", "text": "Stretch to Fit: On" },
      "else": { "name": "text.setText", "id": "stretchToFit", "text": "Stretch to Fit: Off" }
    },
    {
      "name": "if.equal",
      "param1": "%game.keepAR%",
      "param2": true,
      "then": { "name": "text.setText", "id": "keepAR", "text": "Keep Ratio: On" },
      "else": { "name": "text.setText", "id": "keepAR", "text": "Keep Ratio: Off" }
    },
    {
      "name": "if.equal",
      "param1": "%game.smoothScreen%",
      "param2": true,
      "then": { "name": "text.setText", "id": "smoothScreen", "text": "Smooth Screen: On" },
      "else": { "name": "text.setText", "id": "smoothScreen", "text": "Smooth Screen: Off" }
    },
    {
      "name": "if.equal",
      "param1": "%game.framerate%",
      "param2": 0,
      "then": { "name": "text.setText", "id": "framerate", "text": "Framerate Limit: Off" },
      "else": { "name": "text.setText", "id": "framerate", "binding": "%game.framerate%", "format": "Framerate Limit: [1]" }
    },
    "anchorPentagrams"
  ]
}