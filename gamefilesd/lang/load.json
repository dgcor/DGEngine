{
  "action": [
    { "name": "variable.setIfNull", "key": "lang", "value": "en" },
    {
      "name": "if.equal",
      "param1": { "name": "file.exists", "file": "lang/%lang%" },
      "param2": false,
      "then": { "name": "variable.set", "key": "lang", "value": "en" }
    }
  ],
  "load.main": "lang/%lang%/main.json",
  "load.main2": "lang/%lang%/main2.json"
}