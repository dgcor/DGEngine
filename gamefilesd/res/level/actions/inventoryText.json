{
  "action": {
    "name": "action.set",
    "id": "update{1}Text",
    "action": {
      "name": "if.equal",
      "param1": "%currentLevel.currentPlayer.hasSelectedItem%",
      "param2": false,
      "then": {
        "name": "if.equal",
        "param1": "%currentLevel.currentPlayer.hasItem.{2}.{3}%",
        "param2": true,
        "then": [
          { "name": "image.enableOutline", "id": "img{1}" },
          {
            "name": "if.equal",
            "param1": "%currentLevel.currentPlayer.item.{2}.{3}.itemType%",
            "param2": "Book",
            "then": {
              "name": "if.equal",
              "param1": "#%currentLevel.currentPlayer.hasSpell.!currentLevel.currentPlayer.item.{2}.{3}.spell.id!%",
              "param2": true,
              "then": {
                "name": "text.setText",
                "id": "txtPanel",
                "query": "currentLevel.currentPlayer.item.{2}.{3}",
                "text": "%name%\n%d.0%\n%d.1%",
                "removeEmptyLines": true,
                "replaceAll": true
              },
              "else": {
                "name": "text.setText",
                "id": "txtPanel",
                "query": "currentLevel.currentPlayer.item.{2}.{3}",
                "text": "%name%\n%d.0%\n%d.2%",
                "removeEmptyLines": true,
                "replaceAll": true
              }
            },
            "else": {
              "name": "if.inList",
              "param": "%currentLevel.currentPlayer.item.{2}.{3}.itemType%",
              "list": ["Amulet", "Ring"],
              "then": {
                "name": "text.setText",
                "id": "txtPanel",
                "query": "currentLevel.currentPlayer.item.{2}.{3}",
                "text": "%name%\n%d.1%\n%d.2%",
                "removeEmptyLines": true,
                "replaceAll": true
              },
              "else": {
                "name": "text.setText",
                "id": "txtPanel",
                "query": "currentLevel.currentPlayer.item.{2}.{3}",
                "text": "%name%\n%d.0%\n%d.1%\n%d.2%\n%d.3%",
                "removeEmptyLines": true,
                "replaceAll": true
              }
            }
          },
          "updatePanelTextSpacing",
          {
            "name": "if.equal",
            "param1": "%currentLevel.currentPlayer.item.{2}.{3}.magical%",
            "param2": 1,
            "then": "setPanelTextColorBlue",
            "else": {
              "name": "if.equal",
              "param1": "%currentLevel.currentPlayer.item.{2}.{3}.unique%",
              "param2": 1,
              "then": [
                "setPanelTextColorGold",
                {
                  "name": "if.equal",
                  "param1": "%currentLevel.currentPlayer.item.{2}.{3}.identified%",
                  "param2": true,
                  "then": {
                    "name": "if.equal",
                    "param1": "%currentLevel.currentPlayer.item.{2}.{3}.hasDescription.4%",
                    "param2": true,
                    "then": [
                      "showItemInfo",
                      {
                        "name": "text.setText",
                        "id": "itemInfoTitle",
                        "query": "currentLevel.currentPlayer.item.{2}.{3}",
                        "text": "%name%"
                      },
                      {
                        "name": "text.setText",
                        "id": "itemInfoDescr",
                        "query": "currentLevel.currentPlayer.item.{2}.{3}",
                        "text": "%d.4%"
                      }
                    ]
                  }
                }
              ],
              "else": "setPanelTextColorWhite"
            }
          }
        ]
      }
    }
  }
}