{
  "action": [
    { "name": "event.delete", "id": "colorCycle" },
    {
      "replaceVars": "value",
      "name": "if.equal",
      "param1": "%colorCycling%",
      "param2": true,
      "then": {
        "name": "event.add",
        "id": "colorCycle",
        "action": {
          "name": "palette.shiftRight",
          "id": "colorCycle",
          "shift": 1,
          "range": ["|colorCycleStart|", "|colorCycleStop|"]
        },
        "time": "|colorCycleSpeed|"
      }
    }
  ]
}