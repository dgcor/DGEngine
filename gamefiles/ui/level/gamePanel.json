      ],
      "onHoverLeave": "clearPanelText"
    },
    {
      "id": "spell",
      "texture": "empty",
      "anchor": "bottom",
      "position": [560, 387],
      "textureRect": [0, 95, 71, 19],
      "clickUp": true,
      "onClick": [
        { "name": "drawable.visible", "id": "invPanel", "visible": false },
        { "name": "drawable.visible", "id": "spellPanel", "visible": true },
        { "name": "button.setToggle", "id": "inv", "toggle": false }
