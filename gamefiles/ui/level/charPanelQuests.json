{
  "action": [
    { "name": "resource.add", "id": "charPanelQuests" },
    {
      "name": "action.set",
      "id": "anchorLeftPentagram",
      "action": { "name": "drawable.anchorToFocused", "id": "pent1", "anchor": "left", "offset": [-6, 1] }
    },
    {
      "name": "action.set",
      "id": "anchorRightPentagram",
      "action": { "name": "drawable.anchorToFocused", "id": "pent2", "anchor": "right", "offset": [6, 1] }
    }
  ],
  "keyboard": [
    {
      "key": ["enter", " "],
      "action": "focus.click"
    },
    {
      "key": "up",
      "action": "focus.moveUp"
    },
    {
      "key": "tab",
      "shift": true,
      "action": "focus.moveUp"
    },
    {
      "key": ["down", "tab"],
      "action": "focus.moveDown"
    },
    {
      "key": "esc",
      "action": { "name": "button.click", "id": "closeQuestLog" }
    }
  ],
  "animation": [
    {
      "texture": "pentspn2",
      "id": "pent1",
      "frames": 8,
      "position": [67, 140],
      "anchor": "left",
      "refresh": 50
    },
    {
      "texture": "pentspn2",
      "id": "pent2",
      "frames": 8,
      "position": [537, 140],
      "anchor": "left",
      "refresh": 50
    }
  ],
  "menu": {
    "id": "menuQuests",
    "bitmapFont": "smaltext",
    "position": [162, 128],
    "horizontalAlign": "center",
    "verticalAlign": "center",
    "anchor": "left",
    "focus": true,
    "focusSound": "titlemov",
    "visibleItems": 8,
    "size": [270, 164],
    "verticalPad": 12,
    "onScrollDown": "focus.moveDown",
    "onScrollUp": "focus.moveUp",
    "items": [
      {
        "%QUESTS%": null,
        "onClick": [
          { "name": "game.clearPlayingSounds" },
          { "name": "sound.play", "id": "titlslct" },
          { "name": "button.click", "id": "quest" },
          { "name": "load", "file": "quests/%ID%.json" }
        ],
        "onFocus": [
          "anchorLeftPentagram",
          "anchorRightPentagram"
        ]
      }
    ]
  },
  "button": {
    "id": "closeQuestLog",
    "anchor": "left",
    "bitmapFont": "smaltext",
    "focus": true,
    "focusSound": "titlemov",
    "position": [92, 297],
    "sound": "titlslct",
    "text": "Close Quest Log",
    "onClick": [
      { "name": "button.click", "id": "quest" }
    ],
    "onFocus": [
      "anchorLeftPentagram",
      "anchorRightPentagram"
    ]
  },
  "action": [
    "anchorLeftPentagram",
    "anchorRightPentagram"
  ]
}