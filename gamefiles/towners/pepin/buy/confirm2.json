{
  "action": [
    { "name": "resource.add", "id": "userPanelConfirm", "ignorePrevious": true },
    { "name": "load", "file": "ui/level/panel/big/upperSeparator.json" },
    {
      "name": "action.set",
      "id": "anchorLeftPentagram",
      "action": "anchorLeftPentagram2"
    },
    {
      "name": "action.set",
      "id": "anchorRightPentagram",
      "action": "anchorRightPentagram2"
    }
  ],
  "animation": [
    {
      "texture": "pentspn2",
      "id": "pent1",
      "frames": 8,
      "position": [32, 94],
      "anchor": "none",
      "refresh": 50
    },
    {
      "texture": "pentspn2",
      "id": "pent2",
      "frames": 8,
      "position": [575, 94],
      "anchor": "none",
      "refresh": 50
    }
  ],
  "text": [
    {
      "id": "itemInfo",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [52, 130],
      "anchor": "none",
      "horizontalSpaceOffset": 1,
      "verticalSpaceOffset": 2
    },
    {
      "id": "itemPrice",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [571, 130],
      "anchor": "none",
      "horizontalAlign": "right",
      "horizontalSpaceOffset": 1
    },
    {
      "id": "confirm",
      "bitmapFont": "smaltext",
      "position": [320, 214],
      "anchor": "none",
      "horizontalAlign": "center",
      "horizontalSpaceOffset": 1,
      "text": "Are you sure you want to buy this item?"
    }
  ],
  "button": [
    {
      "id": "yes",
      "bitmapFont": "smaltext",
      "sound": "titlslct",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 250],
      "anchor": "none",
      "horizontalAlign": "center",
      "horizontalSpaceOffset": 1,
      "text": "Yes",
      "onClick": [
        {
          "name": "player.removeGold",
          "gold": "|currentLevel|player.pepin.item.{1}.{2}.price|"
        },
        {
          "name": "item.trade",
          "item": { "playerId": "pepin", "inventory": {1}, "item": {2} },
          "position": "BottomLeft",
          "onInventoryFull": "inventoryFull"
        },
        "updateBeltItems",
        { "name": "resource.popAll", "id": "userPanelBuy" },
        { "name": "load", "file": "towners/pepin/buy/panel.json" }
      ],
      "onFocus": [
        "anchorLeftPentagram",
        "anchorRightPentagram"
      ]
    },
    {
      "id": "back",
      "bitmapFont": "smaltext",
      "sound": "titlslct",
      "focus": true,
      "focusSound": "titlemov",
      "position": [320, 274],
      "anchor": "none",
      "horizontalAlign": "center",
      "horizontalSpaceOffset": 1,
      "text": "No",
      "onClick": { "name": "resource.popAll", "id": "userPanelConfirm" },
      "onFocus": [
        "anchorLeftPentagram",
        "anchorRightPentagram"
      ]
    }
  ],
  "action": [
    "anchorLeftPentagram",
    "anchorRightPentagram",
    {
      "name": "text.setTextFromQuery",
      "id": "itemInfo",
      "query": "currentLevel.player.pepin.item.{1}.{2}",
      "text": "%name%\n  %d.0%,  %d.3%",
      "removeEmptyLines": true
    },
    {
      "name": "text.setTextFromQuery",
      "id": "itemPrice",
      "query": "currentLevel.player.pepin.item.{1}.{2}",
      "text": "%price%"
    },
    {
      "replaceVars": true,
      "name": "if.equal",
      "param1": {
        "name": "player.canEquipItem",
        "item": { "playerId": "pepin", "inventory": {1}, "item": {2} }
      },
      "param2": false,
      "then": [
        { "name": "text.setColor", "id": "itemInfo", "color": "%textRed%" },
        { "name": "text.setColor", "id": "itemPrice", "color": "%textRed%" }
      ],
      "else": {
        "name": "if.equal",
        "param1": "|currentLevel|player.pepin.item.{1}.{2}.unique|",
        "param2": 1,
        "then": [
          { "name": "text.setColor", "id": "itemInfo", "color": "%textGold%" },
          { "name": "text.setColor", "id": "itemPrice", "color": "%textGold%" }
        ],
        "else": {
          "name": "if.equal",
          "param1": "|currentLevel|player.pepin.item.{1}.{2}.magic|",
          "param2": 1,
          "then": [
            { "name": "text.setColor", "id": "itemInfo", "color": "%textBlue%" },
            { "name": "text.setColor", "id": "itemPrice", "color": "%textBlue%" }
          ],
          "else": [
            { "name": "text.setColor", "id": "itemInfo" },
            { "name": "text.setColor", "id": "itemPrice" }
          ]
        }
      }
    }
  ]
}