{
  "action": [
    {
      "name": "action.set",
      "id": "setBackButtonAction",
      "action": {
        "name": "drawable.setAction",
        "id": "back",
        "event": "click",
        "action": [
          { "name": "resource.popAll", "id": "panelBigNoGold" },
          { "name": "load", "file": "towners/cain/panelIdentify.json" }
        ]
      }
    },
    {
      "name": "action.set",
      "id": "actionNoGold",
      "action": [
        { "name": "resource.popAll", "id": "userPanelIdentify" },
        { "name": "load", "file": "ui/level/panelBigUpperSeparator.json" },
        { "name": "load", "file": "ui/level/panelBigNoGold.json" },
        "setBackButtonAction"
      ]
    }
  ],
  "load": "ui/level/panelBigUpperSeparator.json",
  "load": "ui/level/panelBigLowerSeparator.json",
  "load": "ui/level/panelBigScrollbar.json",
  "keyboard": [
    {
      "key": ["up", "w"],
      "action": [
        "focus.moveUp",
        "mainMenu.moveScrollbar"
      ]
    },
    {
      "key": "tab",
      "shift": true,
      "action": [
        "focus.moveUp",
        "mainMenu.moveScrollbar"
      ]
    },
    {
      "key": ["down", "s", "tab"],
      "action": [
        "focus.moveDown",
        "mainMenu.moveScrollbar"
      ]
    }
  ],
  "button": [
    {
      "id": "btnItem1",
      "texture": "empty",
      "textureRect": [518, 44],
      "sound": "titlslct",
      "position": [52, 94],
      "anchor": "none",
      "onClick": "actionNoGold"
    },
    {
      "id": "btnItem2",
      "texture": "empty",
      "textureRect": [518, 44],
      "sound": "titlslct",
      "position": [52, 142],
      "anchor": "none",
      "onClick": "actionNoGold"
    },
    {
      "id": "btnItem3",
      "texture": "empty",
      "textureRect": [518, 44],
      "sound": "titlslct",
      "position": [52, 190],
      "anchor": "none",
      "onClick": "actionNoGold"
    },
    {
      "id": "btnItem4",
      "texture": "empty",
      "textureRect": [518, 44],
      "sound": "titlslct",
      "position": [52, 238],
      "anchor": "none",
      "onClick": "actionNoGold"
    }
  ],
  "text": [
    {
      "id": "txtPrice1",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [570, 94],
      "anchor": "none",
      "horizontalAlign": "right",
      "text": "%identifyPrice%",
      "visible": false
    },
    {
      "id": "txtPrice2",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [570, 142],
      "anchor": "none",
      "horizontalAlign": "right",
      "text": "%identifyPrice%",
      "visible": false
    },
    {
      "id": "txtPrice3",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [570, 190],
      "anchor": "none",
      "horizontalAlign": "right",
      "text": "%identifyPrice%",
      "visible": false
    },
    {
      "id": "txtPrice4",
      "replaceVars": true,
      "bitmapFont": "smaltext",
      "position": [570, 238],
      "anchor": "none",
      "horizontalAlign": "right",
      "text": "%identifyPrice%",
      "visible": false
    }
  ],
  "action": [
    {
      "name": "text.setText",
      "id": "panelTitle",
      "binding": "|currentLevel|currentPlayer.gold|",
      "format": "Identify which item?            Your gold : [1]"
    },
    {
      "name": "switch",
      "param": "|mainMenu|itemCount|",
      "case": [
        { "value": 0 },
        {
          "value": 1,
          "action": { "name": "drawable.visible", "id": "txtPrice1", "visible": true }
        },
        {
          "value": 2,
          "action": [
            { "name": "drawable.visible", "id": "txtPrice1", "visible": true },
            { "name": "drawable.visible", "id": "txtPrice2", "visible": true }
          ]
        },
        {
          "value": 3,
          "action": [
            { "name": "drawable.visible", "id": "txtPrice1", "visible": true },
            { "name": "drawable.visible", "id": "txtPrice2", "visible": true },
            { "name": "drawable.visible", "id": "txtPrice3", "visible": true }
          ]
        }
      ],
      "default": [
        { "name": "drawable.visible", "id": "txtPrice1", "visible": true },
        { "name": "drawable.visible", "id": "txtPrice2", "visible": true },
        { "name": "drawable.visible", "id": "txtPrice3", "visible": true },
        { "name": "drawable.visible", "id": "txtPrice4", "visible": true }
      ]
    },
    "anchorLeftPentagram",
    "anchorRightPentagram"
  ]
}