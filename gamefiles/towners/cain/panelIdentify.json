      "anchor": "none",
      "horizontalAlign": "center",
      "horizontalSpaceOffset": 1,
      "text": "Back",
      "onClick": [
        { "name": "resource.popAll", "id": "userPanelFrame" },
        { "name": "resource.add", "id": "userPanelFrame" },
        { "name": "load", "file": "ui/level/panel.json" },
        { "name": "load", "file": "towners/cain/panelMain.json" }
      ],
      "onFocus": [
        "anchorLeftPentagram",
        "anchorRightPentagram"
      ]
    }
  ],
  "action": [
    {
      "name": "if.notEqual",
      "param1": "|mainMenu|itemCount|",
      "param2": 0,
      "then": { "name": "load", "file": "towners/cain/panelIdentifyListItems.json" },
      "else": { "name": "load", "file": "towners/cain/panelIdentifyNoItems.json" }
    }
  ]
