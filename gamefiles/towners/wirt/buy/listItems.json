{
  "load": "ui/level/panel/big/upperSeparator.json",
  "load": "ui/level/panel/big/lowerSeparator.json",
  "keyboard": [
    {
      "key": "tab",
      "shift": true,
      "action": "focus.moveUp"
    },
    {
      "key": "tab",
      "action": "focus.moveDown"
    }
  ],
  "button": {
    "id": "btnItem1",
    "texture": "empty",
    "textureRect": [518, 44],
    "position": [52, 154],
    "anchor": "none",
    "focus": true,
    "focusSound": "titlemov",
    "onClick": { "name": "menu.clickVisible", "id": "mainMenu", "index": 0 },
    "onFocus": [
      "anchorLeftPentagram",
      "anchorRightPentagram"
    ]
  },
  "menu": {
    "id": "menuPrices",
    "replaceVars": true,
    "bitmapFont": "smaltext",
    "sound": "titlslct",
    "position": [571, 154],
    "horizontalAlign": "right",
    "horizontalSpaceOffset": 1,
    "anchor": "none",
    "focusOnClick": false,
    "visibleItems": 1,
    "verticalPad": 38,
    "items": {
      "load": "currentLevel|wirt.inventory.0",
      "text": "%price%",
      "executeAction": {
        "name": "if.equal",
        "param1": {
          "name": "player.canEquipItem",
          "item": { "playerId": "wirt", "inventory": 0, "item": "%idx%" }
        },
        "param2": false,
        "then": {
          "name": "menu.setColor",
          "id": "menuPrices",
          "index": "%menuIdx%",
          "color": "%textRed%"
        },
        "else": {
          "name": "if.equal",
          "param1": "|currentLevel|player.wirt.item.0.%idx%.unique|",
          "param2": 1,
          "then": {
            "name": "menu.setColor",
            "id": "menuPrices",
            "index": "%menuIdx%",
            "color": "%textGold%"
          },
          "else": {
            "name": "if.equal",
            "param1": "|currentLevel|player.wirt.item.0.%idx%.magic|",
            "param2": 1,
            "then": {
              "name": "menu.setColor",
              "id": "menuPrices",
              "index": "%menuIdx%",
              "color": "%textBlue%"
            },
            "else": {
              "name": "menu.setColor",
              "id": "menuPrices",
              "index": "%menuIdx%"
            }
          }
        }
      }
    }
  },
  "action": [
    { "name": "focus.set", "id": "btnItem1" },
    "anchorLeftPentagram",
    "anchorRightPentagram"
  ]
}