    {
      "name": "action.set",
      "id": "updateInventoryLeftHandClick",
      "action": {
        "name": "if.equal",
        "param1": "|currentLevel|hasSelectedItem|",
        "param2": true,
        "then": {
          "name": "if.inList",
          "param": "|currentLevel|selectedItem.type|",
          "list": ["Shield", "Weapon"],
          "then": [
            { "name": "image.setTexture", "id": "imgLeftHand", "texture": "empty" },
            { "name": "item.update", "inventory": "body", "item": "LeftHand" },
            "updateInventoryLeftHand"
          ]
        },
        "else": [
          { "name": "image.setTexture", "id": "imgLeftHand", "texture": "empty" },
